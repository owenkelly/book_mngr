<table>
  <thead>
    <tr>
      <th>Book Title</th>
      <th>Rating and Review</th>
      <th>Rating Only</th>
      <th>Review Only</th>
      <th>No Email</th>
     </tr>
  </thead>
  <tbody>

    <% @followings.each do |following|  %>
    <tr>
    	<td><%= link_to following.follows.title, following.follows %></td>
    	<%= form_for following do %>
    	<td><%= radio_button_tag "following[setting]", "rating_and_review", following.setting == "rating_and_review"  %></td>
    	<td><%= radio_button_tag "following[setting]", "rating", following.setting == "rating" %></td>
    	<td><%= radio_button_tag "following[setting]", "review", following.setting == "review" %></td>
    	<td><%= radio_button_tag "following[setting]", "off", following.setting == "off" %></td>
    	<td><%= submit_tag 'Update' %></td>
    	</tr>
    	

    	<% end %>
    	<% end %>
    </tbody>
    </table>

        
    

    
