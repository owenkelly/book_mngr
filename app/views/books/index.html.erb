<%= render "shared/search_form" %>

<h1>Listing books</h1>

<table>
  <thead>
    <tr>
      <th><%= sort_link @search, :title %></th>
      <th><%= sort_link @search, :author %></th>
      <th><%= sort_link @search, :rating %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book %></td>
        <td><%= book.author%></td>
        <td><%= book.rating%></td>
               
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Reviews', book_reviews_path(book.id) %></td>
        <td><%= disable_or_destroy book %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= will_paginate @books %>
<br>

<%= link_to 'New Book', new_book_path %>


