<%= search_form_for @search, url: search_books_path,
                        	html: { method: :post } do |f| %>
	<%= f.condition_fields do |c| %>
	<div class = "field">
		<%= c.attribute_fields do |a| %>
			<%= a.attribute_select associations: [:tags] %>
		<% end %>
		<%= c.predicate_select only: [:cont, :not_cont, :eq, :not_eq] %>
		<%= c.value_fields do |v| %>
			<%= v.search_field :value %>
		<% end %>
		</div>
	<% end %>
	<div class = "actions"><%= f.submit "Search" %></div>
<%end%>